<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="/stylesheets/addstaff.css">
</head>
<body>
    

<section class="get-in-touch">
   <h1 class="title">Get in touch</h1>
   <form class="contact-form row" action="/updatestaff/:{{id}}" method="POST">
      <div class="form-field col-lg-6">
         <input id="empid" class="input-text js-input" type="text" value="{{customer.empid}}" name="empid" readonly>
         <label class="label" for="empid">EMPLOYEE ID</label>
      </div>
      <div class="form-field col-lg-6">
         <input id="name" class="input-text js-input" type="text" value="{{customer.Name}}" name="name" required>
         <label class="label" for="name">Name</label>
      </div>
      <div class="form-field col-lg-6 ">
         <input id="email" class="input-text js-input" type="email" name="email" value="{{customer.email}}" required>
         <label class="label" for="email">E-mail</label>
      </div>
      <div class="form-field col-lg-6 ">
         <input id="department" class="input-text js-input" type="text" name="department" value="{{customer.Department}}" required>
         <label class="label" for="department">Department</label>
      </div>
       <div class="form-field col-lg-6 ">
         <input id="role" class="input-text js-input" type="text" name="role" value="{{customer.Role}}" required>
         <label class="label" for="role">Role</label>
      </div>
      <div class="form-field col-lg-12">
         <input id="salary" class="input-text js-input" type="text" value="{{customer.Salary}}" name="salary" required>
         <label class="label" for="salary">Salary</label>
      </div>
      <div class="form-field col-lg-12">
         <input class="submit-btn" type="submit" value="Submit">
      </div>
   </form>
</section>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
